{
  "schemaVersion": 1,
  "id": "melius-vanish",
  "version": "${version}",
  "name": "Vanish",
  "description": "Completely hide from other players using /vanish",
  "authors": [
    "Drex"
  ],
  "license": "MIT",
  "icon": "assets/vanish/icon.png",
  "environment": "server",
  "entrypoints": {
    "server": [
      "me.drex.vanish.VanishMod"
    ],
    "preLaunch": [
      "com.llamalad7.mixinextras.MixinExtrasBootstrap::init"
    ]
  },
  "custom": {
    "modmanager": {
      "curseforge": 676275,
      "modrinth": "UL4bJFDY"
    },
    "mc-publish": {
      "quilt": true
    }
  },
  "mixins": [
    "vanish.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.15.10",
    "fabric-api": "*",
    "java": ">=21",
    "minecraft": ">=1.20.5"
  },
  "breaks": {
    "vanish": "*",
    "styledchat": "<2.0.0"
  }
}
